@{
    ViewData["Title"] = "Remove Song";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            text-align: center;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
        }

        .nav {
            display: flex;
            justify-content: center;
            gap: 30px;
            font-size: 24px;
            margin-bottom: 20px;
        }

            .nav a {
                text-decoration: none;
                color: black;
                padding-bottom: 5px;
                transition: all 0.3s ease;
            }

                .nav a.active {
                    font-weight: bold;
                    border-bottom: 3px solid #28a745;
                    color: #28a745;
                }

                .nav a:hover {
                    color: #28a745;
                }

        h2 {
            font-size: 30px;
            color: #333;
            margin-bottom: 20px;
        }

        .form-container {
            width: 50%;
            margin: auto;
            padding: 20px;
            border: 2px solid black;
            text-align: left;
            border-radius: 8px;
            background-color: white;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            margin-bottom: 15px;
        }

            .form-group label {
                font-weight: bold;
                margin-bottom: 5px;
                width: 100%;
            }

            .form-group select {
                padding: 10px;
                font-size: 16px;
                border: 2px solid #ccc;
                border-radius: 5px;
                background-color: white;
                appearance: none;
                -webkit-appearance: none;
                -moz-appearance: none;
                width: 100%;
            }

                .form-group select:focus {
                    outline: none;
                    border-color: #28a745;
                }

        .form-container button {
            padding: 12px 20px;
            font-size: 18px;
            background-color: #28a745; /* Green color */
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
            margin-top: 15px;
            transition: background-color 0.3s ease;
        }

            .form-container button:hover {
                background-color: #218838; /* Darker green on hover */
            }

        table {
            width: 80%;
            margin: 30px auto;
            border-collapse: collapse;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            table th, table td {
                padding: 12px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }

            table th {
                background-color: #f4f4f9;
                font-weight: bold;
                color: #333;
            }

            table tr:hover {
                background-color: #f9f9f9;
            }

        .remove-button {
            color: red;
            font-size: 18px;
            cursor: pointer;
            background: none;
            border: none;
            padding: 5px 10px;
        }

            .remove-button:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>

    <!-- Navigation Tabs -->
    <div class="nav">
        <a href="@Url.Action("Index", "Home")">Library</a>
        <a href="@Url.Action("Add", "Home")">Add</a>
        <a href="@Url.Action("Update", "Home")">Update</a>
        <a href="@Url.Action("Remove", "Home")" class="active">Remove</a>
    </div>

    <h2>Remove Song</h2>

    <!-- Filter Form -->
    <div class="form-container">
        <form method="get" action="@Url.Action("Remove", "Home")">
            <!-- Filters for Artist, Playlist, Genre -->
            <div class="form-group">
                <label for="artist">Artist</label>
                <select name="artist" id="artist">
                    <option value="">Select Artist</option>
                    @foreach (var artist in ViewBag.ListOfArtists)
                    {
                        <option value="@artist.ArtistId">@artist.ArtistName</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="playlistId">Playlist</label>
                <select name="playlistId" id="playlistId">
                    <option value="">Select Playlist</option>
                    @foreach (var playlist in ViewBag.ListOfPlaylists)
                    {
                        <option value="@playlist.PlaylistId">@playlist.PlaylistName</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="genre">Genre</label>
                <select name="genre" id="genre">
                    <option value="">Select Genre</option>
                    @foreach (var genre in ViewBag.ListOfGenres)
                    {
                        <option value="@genre">@genre</option>
                    }
                </select>
            </div>

            <button type="submit">Filter</button>
        </form>
    </div>

    <!-- Songs Table -->
    <table>
        <thead>
            <tr>
                <th>Song Title</th>
                <th>Artist</th>
                <th>Playlist</th>
                <th>Genre</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var song in ViewBag.FilteredSongs)
            {
                <tr>
                    <td>@song.SongTitle</td>
                    <td>@song.ArtistName</td>
                    <td>@song.PlaylistName</td>
                    <td>@song.Genre</td>
                    <td>
                        <form method="post" action="@Url.Action("DeleteArtistAndSong", "Home")">
                            <input type="hidden" name="songId" value="@song.SongId" />
                            <input type="hidden" name="artistId" value="@song.ArtistId" />
                            <input type="hidden" name="playlistId" value="@song.PlaylistId" />
                            <input type="hidden" name="genre" value="@song.Genre" />
                            <button type="submit" class="remove-button">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>