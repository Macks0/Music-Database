@{
    ViewData["Title"] = "Add Song";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            text-align: center;
        }

        .nav {
            display: flex;
            justify-content: center;
            gap: 30px;
            font-size: 24px;
            margin-bottom: 20px;
        }

            .nav a {
                text-decoration: none;
                color: black;
                padding-bottom: 5px;
                transition: all 0.3s ease;
            }

                .nav a.active {
                    font-weight: bold;
                    border-bottom: 3px solid #28a745;
                    color: #28a745;
                }

                .nav a:hover {
                    color: #28a745;
                }

        h2 {
            font-size: 30px;
            color: #333;
            margin-bottom: 20px;
            text-decoration: none; /* Remove underline if any */
            border: none; /* Remove any border if applied */
        }
        .form-container {
            width: 50%;
            margin: auto;
            padding: 20px;
            border: 2px solid black;
            text-align: left;
            border-radius: 8px;
            background-color: white;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            margin-bottom: 15px;
        }

            .form-group label {
                font-weight: bold;
                margin-bottom: 5px;
                width: 100%;
            }

            .form-group select, .form-group input {
                padding: 10px;
                font-size: 16px;
                border: 2px solid #ccc;
                border-radius: 5px;
                background-color: white;
                appearance: none;
                -webkit-appearance: none;
                -moz-appearance: none;
                width: 100%;
            }

                .form-group select:focus, .form-group input:focus {
                    outline: none;
                    border-color: #28a745;
                }

        .form-container button, .form-container form button {
            padding: 12px 20px;
            font-size: 18px;
            background-color: #28a745; /* Green color */
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
            margin-top: 15px;
            transition: background-color 0.3s ease;
        }

            .form-container button:hover, .form-container form button:hover {
                background-color: #218838; /* Darker green on hover */
            }

    </style>
</head>
<body>

    <!-- Navigation Tabs -->
    <div class="nav">
        <a href="@Url.Action("Index", "Home")">Library</a>
        <a href="@Url.Action("Add", "Home")" class="active">Add</a>
        <a href="@Url.Action("Update", "Home")">Update</a>
        <a href="@Url.Action("Remove", "Home")">Remove</a>
    </div>

    <div class="form-container">
        <h2>Add New Song</h2>

        <form method="post" action="/Home/Add">
            <div class="form-group">
                <label for="SongTitle">Song Title:</label>
                <input type="text" id="SongTitle" name="SongTitle" required />
            </div>

            <div class="form-group">
                <label for="Genre">Genre:</label>
                <select id="Genre" name="Genre" required>
                    <option value="">Select Genre</option>
                    <option value="Pop">Pop</option>
                    <option value="Rock">Rock</option>
                    <option value="Jazz">Jazz</option>
                    <option value="Hip-Hop">Hip-Hop</option>
                    <option value="Country">Country</option>
                </select>
            </div>

            <div class="form-group">
                <label for="ArtistName">Artist Name:</label>
                <input type="text" id="ArtistName" name="ArtistName" required />
            </div>

            <button type="submit">Add Song</button>
        </form>
    </div>

</body>
</html>
