@model List<WebApplication1.Models.SongViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Song Update</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            text-align: center;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
        }

        .nav {
            display: flex;
            justify-content: center;
            gap: 30px;
            font-size: 24px;
            margin-bottom: 20px;
        }

            .nav a {
                text-decoration: none;
                color: black;
                padding-bottom: 5px;
                transition: all 0.3s ease;
            }

                .nav a.active {
                    font-weight: bold;
                    border-bottom: 3px solid #28a745;
                    color: #28a745;
                }

                .nav a:hover {
                    color: #28a745;
                }

        h2 {
            font-size: 30px;
            color: #333;
            margin-bottom: 20px;
        }

        .form-container {
            width: 50%;
            margin: auto;
            padding: 20px;
            border: 2px solid black;
            text-align: left;
            border-radius: 8px;
            background-color: white;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            margin-bottom: 15px;
        }

            .form-group label {
                font-weight: bold;
                margin-bottom: 5px;
                width: 100%;
            }

            .form-group select, .form-group input {
                padding: 10px;
                font-size: 16px;
                border: 2px solid #ccc;
                border-radius: 5px;
                background-color: white;
                width: 100%;
            }

                .form-group select:focus, .form-group input:focus {
                    outline: none;
                    border-color: #28a745;
                }

        .form-container button {
            padding: 12px 20px;
            font-size: 18px;
            background-color: #28a745; /* Green color */
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
            margin-top: 15px;
            transition: background-color 0.3s ease;
        }

            .form-container button:hover {
                background-color: #218838; /* Darker green on hover */
            }

        .table-container {
            width: 80%;
            margin: auto;
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 12px 20px;
            text-align: left;
            font-size: 16px;
            border: 1px solid #ccc;
        }

        th {
            background-color: #28a745;
            color: white;
        }

        td input {
            padding: 8px;
            font-size: 14px;
            width: 100%;
            border-radius: 5px;
            border: 1px solid #ccc;
            background-color: #f9f9f9;
        }

            td input:focus {
                outline: none;
                border-color: #28a745;
            }

        button {
            padding: 12px 20px;
            font-size: 16px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
            margin-top: 10px;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #218838;
            }

    </style>
</head>
<body>

    <!-- Navigation Tabs -->
    <div class="nav">
        <a href="@Url.Action("Index", "Home")">Library</a>
        <a href="@Url.Action("Add", "Home")">Add</a>
        <a href="@Url.Action("Update", "Home")" class="active">Update</a>
        <a href="@Url.Action("Remove", "Home")">Remove</a>
    </div>

    <h2>Update Songs</h2>

        <!-- Filter Form -->
    <div class="form-container">
        <form method="get" action="@Url.Action("Update", "Home")">
            <!-- Filters for Artist, Playlist, Genre -->
            <div class="form-group">
                <label for="artist">Artist</label>
                <select name="artist" id="artist">
                    <option value="">Select Artist</option>
                    @foreach (var artist in ViewBag.ListOfArtists)
                    {
                        <option value="@artist.ArtistId">@artist.ArtistName</option>

                    }
                </select>
            </div>

            <div class="form-group">
                <label for="playlist">Playlist</label>
                <select name="playlistId" id="playlist">
                    <option value="">Select Playlist</option>
                    @foreach (var playlist in ViewBag.ListOfPlaylists)
                    {
                        <option value="@playlist.PlaylistId">@playlist.PlaylistName</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="genre">Genre</label>
                <select name="genre" id="genre">
                    <option value="">Select Genre</option>
                    @foreach (var genre in ViewBag.ListOfGenres)
                    {
                        <option value="@genre">@genre</option>
                    }
                </select>
            </div>

            <button type="submit">Filter</button>
        </form>
    </div>

    <!-- Songs Table -->
    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Song Title</th>
                    <th>Artist</th>
                    <th>Playlist</th>
                    <th>Genre</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var song in Model)
                {
                    <tr>
                        <form asp-action="Edit" method="post">
                            <input type="hidden" name="SongId" value="@song.SongId" />
                            <td><input type="text" name="SongTitle" value="@song.SongTitle" class="form-control" /></td>
                            <td><input type="text" name="ArtistName" value="@song.ArtistName" class="form-control" /></td>
                            <td><input type="text" name="PlaylistName" value="@song.PlaylistName" class="form-control" /></td>
                            <td><input type="text" name="Genre" value="@song.Genre" class="form-control" /></td>
                            <td><button type="submit">Update</button></td>
                        </form>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>
